<html>

<head>
<script src="//code.angularjs.org/1.3.0-rc.1/angular.min.js"></script>
<script src="/javascripts/index/script.js"></script>
<link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
</head>
<body ng-app="userCardApp">
<div  class ="main-container" ng-controller="mainController">
<div class='form-container'>
<input type="text" ng-model="username" name="username">
<button ng-click ="getUserDetails()">Add</button>
</div>
<div class="division-line"></div>
<div class="sort-container">
	<div >Sort By :</div>
	<button  ng-click="printUsers($event)" value="login">Name</button>
	<button ng-click="printUsers($event)" value="location">Location</button>
	<button ng-click="printUsers($event)" value="followers">Followers</button>
</div>
<div class = 'card-container'>
<div class="each-card" ng-repeat="obj in userArr">
	<button ng-click="deleteUser($event)" value="{{obj.id}}" >X</button>
	<div><img ng-src="{{obj.avatar_url}}" alt="avatar" height="100" width="100"></div>
  <h4>{{obj.login}}</h4>
  <h5>Location :- {{obj.location}}</h5>
  <h5>Followers :- {{obj.followers}}</h5>
</div>
</div>
</div>
</body>

</html>